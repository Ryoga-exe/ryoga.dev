    "prettier:check": "prettier --cache --check .",
    "eslint:fix": "eslint --cache --fix .",
    "eslint:check": "eslint --cache .",
    "stylelint:fix": "stylelint --cache --fix **/*.{css,scss,astro} --ignore-path .gitignore",
